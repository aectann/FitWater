<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="24dp">

    <TextView
        android:id="@+id/goal_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goal_label"
        android:gravity="center"/>

    <TextView
        android:id="@+id/goal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1400 ml"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:layout_below="@+id/goal_label"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/progress_indicator_size"
        android:layout_height="@dimen/progress_indicator_size"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>
